<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llAccount"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="8sp"
    android:background="#404040"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="3"
        >

        <TextView
            android:id="@+id/textViewAccount"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:clickable="true"
            android:onClick="onClick"
            android:text="account"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewBitiku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="備蓄 00 / 00"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginLeft="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewSikyu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="支給 0 / 0"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:layout_marginLeft="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="支給時間 分"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:layout_marginLeft="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewNokori"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="次の支給まで　　00分00秒"
            android:textColor="#80FF80"
            android:textSize="18sp"
            android:layout_marginLeft="16sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textViewMantan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="支給満タンまで　00分00秒"
            android:textColor="#80FF80"
            android:textSize="18sp"
            android:layout_marginLeft="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_gravity="right"
        android:layout_marginRight="0px"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/buttonGo"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/go"
            android:singleLine="false"
            android:layout_margin="8sp"
            android:textSize="24sp" />

    </LinearLayout>
</LinearLayout>
